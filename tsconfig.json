{
	"include": ["**/*.ts"],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": ["ES2024"],
		"module": "preserve",
		"noEmit": true,
		"noUncheckedIndexedAccess": true,
		"rootDir": ".",
		"strict": true,
		"skipLibCheck": true,
		"target": "ES2022"
	}
}
